#include <stdio.h>
int main()  {

    int val,maior,menor;
    printf("digite o valor\n ");
    scanf("%d",&val);

    while (val!=0){
        if (val>maior){
            maior=val;
        }
        if(val<menor){
            menor=val;
        }
        printf("digite o valor \n ");
        scanf("%d",&val);
    }

    printf("maior %d\n", maior);
    printf("menor %d\n", menor);

return 0;
}
